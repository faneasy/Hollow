{
    "tags": {
        "allowUnknownTags": true
    },
    "source": {
        "include": [
            "./README.md",
            "./models/",
            "./routes/"
        ],
        "exclude": [

        ],
        "includePattern": ".+\\.js(doc)?$",
        "excludePattern": "(^|\\/|\\\\)_"
    },
    "plugins": [
        "plugins/markdown"
    ],
    "markdown": {
        "parser": "gfm",
        "hardwrap": true
    },
    "opts": {
        "recurse": true,
        "template": "./doc_templates/hollow",
        "destination": "./docs"   
    }
}
